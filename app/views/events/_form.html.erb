<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :event_date %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :status %>
    <%= f.input :id_user %>
    <%= f.input :id_type_event %>
    <%= f.input :id_resource %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
