<div class="show-event-div">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Evento:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Data do Evento:</strong>
    <%= @event.event_date.strftime("%d/%m/%Y") %>
  </p>

  <p>
    <strong>Horário de Início:</strong>
    <%= @event.start_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Horário de Término:</strong>
    <%= @event.end_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @event.status %>
  </p>

  <p>
    <strong>Cliente:</strong>
    <%= @event.user_id %>
  </p>

  <p>
    <strong>Tipo de Serviço:</strong>
    <%= TypeEvent.find(@event.type_event_id).name %>
  </p>

  <p>
    <strong>Atendido Por:</strong>
    <%= Resource.find(@event.resource_id).name %>
  </p>

   

  <div class="col-sm-6"><%= link_to 'Edit', edit_event_path(@event), :class => "botao-azul btn" %></div>
  <div class="col-sm-6"><%= link_to 'Back', events_path, :class => "botao-amarelo btn" %></div>
</div>