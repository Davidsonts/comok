<%= simple_form_for(@resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => "Nome do Recurso" %>
  </div>

  <br><br>
  
  <div class="form-actions">
    <div class="col-sm-6"><%= f.button :submit, :class => "botao-azul", :value => "Enviar" %></div>
    <div class="col-sm-6"><%= link_to 'Back', resources_path, :class => "botao-amarelo btn" %></div>
  </div>
<% end %>
