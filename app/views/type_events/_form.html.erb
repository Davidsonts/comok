<%= simple_form_for(@type_event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => "Nome do Evento" %>
    <br>
    <%= f.input :duration, :label => "Duração do Evento (Tempo Padrão)" %>
  </div>

  <br><br>

  <div class="form-actions">
    <div class="col-sm-6"><%= f.button :submit, :class => "botao-azul", :value => "Enviar" %></div>
    <div class="col-sm-6"><%= link_to 'Back', type_events_path, :class => "botao-amarelo btn" %></div>
  </div>
<% end %>
